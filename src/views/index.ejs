<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thunderâš¡</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">
    <script src="/js/headerNavbarScript.js" defer></script>
    <script src="/js/headerScrollScript.js" defer></script>
</head>
<body>
    <!-- ******************************** HEADER ******************************** -->
    <%- include("partials/header") %>
    <!-- ******************************** END HEADER ******************************** -->

    <!-- ******************************** MAIN ******************************** -->
    <main>
        <section class="bannerSection"></section>
    
        <section class="categoriesSection">
            <section class="splide" aria-labelledby="carousel-heading">
                <div class="splide__track">
                    <ul class="splide__list">
                        <% categories.forEach(category => { %>
                            <li class="splide__slide">
                                <a href="/<%= category.name.toLowerCase() %>">
                                    <div class="categoryContainer">
                                        <div class="categoryTextContainer">
                                            <p class="categoryName"><%= category.name %></p>
                                        </div>
                                    </div>
                                </a>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </section>
        </section>

        <section class="indexInformationSection">
            <div class="indexInformationContainer">
                <div class="indexInformationIconContainer">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="indexInformationIcon">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M7 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                        <path d="M17 17m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                        <path d="M5 17h-2v-4m-1 -8h11v12m-4 0h6m4 0h2v-6h-8m0 -5h5l3 5" />
                        <path d="M3 9l4 0" />
                    </svg>
                </div>
        
                <div class="indexInformationTitleAndDescriptionContainer">
                    <h4 class="indexInformationTitle">Fast delivery</h4>
                    <p class="indexInformationDescription">Shipments of no more than a week.</p>
                </div>
            </div>
        
            <div class="indexInformationContainer">
                <div class="indexInformationIconContainer">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="indexInformationIcon">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M9 14c0 1.657 2.686 3 6 3s6 -1.343 6 -3s-2.686 -3 -6 -3s-6 1.343 -6 3z" />
                        <path d="M9 14v4c0 1.656 2.686 3 6 3s6 -1.344 6 -3v-4" />
                        <path d="M3 6c0 1.072 1.144 2.062 3 2.598s4.144 .536 6 0c1.856 -.536 3 -1.526 3 -2.598c0 -1.072 -1.144 -2.062 -3 -2.598s-4.144 -.536 -6 0c-1.856 .536 -3 1.526 -3 2.598z" />
                        <path d="M3 6v10c0 .888 .772 1.45 2 2" />
                        <path d="M3 11c0 .888 .772 1.45 2 2" />
                    </svg>
                </div>
        
                <div class="indexInformationTitleAndDescriptionContainer">
                    <h4 class="indexInformationTitle">Payment flexibility</h4>
                    <p class="indexInformationDescription">Various payment methods for your convenience.</p>
                </div>
            </div>
        
            <div class="indexInformationContainer">
                <div class="indexInformationIconContainer">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"  stroke-linejoin="round" class="indexInformationIcon">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M12 3l8 4.5l0 9l-8 4.5l-8 -4.5l0 -9l8 -4.5" />
                        <path d="M12 12l8 -4.5" />
                        <path d="M12 12l0 9" />
                        <path d="M12 12l-8 -4.5" />
                        <path d="M16 5.25l-8 4.5" />
                    </svg>
                </div>
        
                <div class="indexInformationTitleAndDescriptionContainer">
                    <h4 class="indexInformationTitle">Returns & exchanges</h4>
                    <p class="indexInformationDescription">You have 30 days to return or exchange your garments.</p>
                </div>
            </div>
        </section>
    </main>
    <!-- ******************************** END MAIN ******************************** -->

    <!-- ******************************** FOOTER ******************************** -->
    <%- include("partials/footer") %>
    <!-- ******************************** END FOOTER ******************************** -->

    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
    <script>
        document.addEventListener( 'DOMContentLoaded', function() {
            var splide = new Splide( '.splide', {
                autoWidth: true,
                autoHeight: true,
                gap: '1rem',
                pagination: false,
                arrows: false
            } );
            splide.mount();
        } );
    </script>
</body>
</html>