<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head", {title: "Thunderâš¡"}) %>
</head>
<body>
    <!-- ******************************** HEADER ******************************** -->
    <%- include("partials/header") %>
    <!-- ******************************** END HEADER ******************************** -->

    <!-- ******************************** MAIN ******************************** -->
    <main class="categoryPageMain">
        <section class="filterSection">
            <h2 class="filtersTitle">FILTERS</h2>
        </section>

        <section class="productsCategorySection">
            <div class="categoryTitleNameAndFilterButtonContainer">
                <h2 class="categoryTitleName"><%= categoryName.toUpperCase() %></h2>
                <button class="filterButton">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"  stroke-linejoin="round"  class="filterIcon">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M4 4h16v2.172a2 2 0 0 1 -.586 1.414l-4.414 4.414v7l-6 2v-8.5l-4.48 -4.928a2 2 0 0 1 -.52 -1.345v-2.227z" />
                    </svg>
                </button>
            </div>

            <div class="categoryProductsContainer">
                <% categoryProducts.forEach(product => { %>
                    <div class="productContainer">
                        <a class="productContainerLink" href="/products/<%= product.id %>">
                            <img class="productImage" src="/images/products/<%= product.image %>" alt="<%= product.name %>">
                            <span class="productPrice">$<%= product.price %></span>
                            <span class="productDiscount">$<%= product.discount %>%OFF</span>
                        </a>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>
    <!-- ******************************** END MAIN ******************************** -->

    <!-- ******************************** FOOTER ******************************** -->
    <%- include("partials/footer") %>
    <!-- ******************************** END FOOTER ******************************** -->
</body>
</html>