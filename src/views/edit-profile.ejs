<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head", {title: "Thunderâš¡ Edit profile"}) %>
</head>
<body>
    <!-- ******************************** HEADER ******************************** -->
    <%- include("partials/header") %>
    <!-- ******************************** END HEADER ******************************** -->

    <main class="editProfileMain">
        <h3 class="editProfileTitle">EDIT PROFILE</h3>

        <form class="editProfileForm" id="editProfileForm" action="/edit-profile/<%= locals.userLoggedIn.id %>?_method=put" method="post">
            <div class="registerFormLabelAndInputContainer">
                <label class="registerLabel" for="name">Name</label>
                <input class="registerInput" type="text" id="name" name="name" value="<%= locals.userLoggedIn.name %>">
            </div>

            <div class="registerFormLabelAndInputContainer">
                <label class="registerLabel" for="lastName">Last name</label>
                <input class="registerInput" type="text" id="lastName" name="lastName" value="<%= locals.userLoggedIn.last_name %>">
            </div>

            <div class="registerFormLabelAndInputContainer">
                <label class="registerLabel" for="email">Email</label>
                <input class="registerInput" type="email" id="email" name="email" value="<%= locals.userLoggedIn.email %>">
            </div>

            <button class="registerButton" type="submit">EDIT</button>
        </form>
    </main>

    <!-- ******************************** FOOTER ******************************** -->
    <%- include("partials/footer") %>
    <!-- ******************************** END FOOTER ******************************** -->
</body>
</html>